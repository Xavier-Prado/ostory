{% extends 'base.html.twig' %}

{% block title %}Choix{% endblock %}

{% block body %}
<div class="my-5 py-5">
    <div class="col-lg-6 mx-auto">
    
    <h1>Choix</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ choice.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ choice.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ choice.description }}</td>
            </tr>
            <tr>
                <th>Numéro de la page associée</th>
                <td>{{ choice.pageId }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_choice_index') }}">Revenir à la liste</a>

    <a href="{{ path('app_choice_edit', {'id': choice.id}) }}">Modifier</a>

    {{ include('choice/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
