{% extends 'base.html.twig' %}

{% block title %}Choix{% endblock %}

{% block body %}
<div class="my-5 pt-4">
    <div class="col-lg-6 mx-auto">
        <div class="text-center">
            <h1 class="ms-2">Choix</h1>
            <a class="btn btn-info m-1 my-4 show--button" href="{{ path('app_choice_index') }}">Revenir Ã  la liste</a>
        </div>

        <table class="table table-hover text-center align-middle">
            <tbody>
                <tr>
                    <th>Histoire</th>
                    <td>{{ choice.title }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ choice.name }}</td>
                </tr>
                <tr>
                    <th>Contenu</th>
                    <td>{{ choice.description }}</td>
                </tr>
                <tr>
                    <th>Page suivante</th>
                    <td>{{ choice.page_to_redirect }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex flex-row-reverse">
            <a class="btn btn-primary col-2 m-1 show--button"  href="{{ path('app_choice_edit', {'id': choice.id}) }}">Modifier</a>
            {{ include('choice/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
