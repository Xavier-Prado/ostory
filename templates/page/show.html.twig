{% extends 'base.html.twig' %}

{% block title %}Page{% endblock %}

{% block body %}
    <div class="my-5 pt-4">
        <div class="col-lg-6 mx-auto">
            <div class="text-center">
                <h1 class="ms-2">Page</h1>
                <a class="btn btn-info m-1 my-4 show--button" href="{{ path('app_page_index') }}">Revenir à la liste</a>
            </div>

            <table class="table table-hover text-center align-middle">
                <tbody>
                    <tr>
                        <th>Titre</th>
                        <td>{{ page.title }}</td>
                    </tr>
                    <tr>
                        <th>Image</th>
                        <td>
                            <img src="{{ asset('uploads/image/page/') ~ page.image }}" height="100px" alt="poster de {{ page.title }}">
                        </td>
                    </tr>
                    <tr>
                        <th>Contenu</th>
                        <td>{{ page.content }}</td>
                    </tr>
                    <tr>
                        <th>Page de démarrage</th>
                        <td>{{ page.start ? 'Oui' : 'Non' }}</td>
                    </tr>
                    <tr>
                        <th>Type de page</th>
                        <td>{{ page.pageEnd ? page.pageEnd|join(', ') : '' }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="d-flex flex-row-reverse">
                <a class="btn btn-primary col-2 m-1 show--button" href="{{ path('app_page_edit', {'id': page.id}) }}">Modifier</a></button>
                {{ include('page/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
