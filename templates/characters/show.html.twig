{% extends 'base.html.twig' %}

{% block title %}Personnage{% endblock %}

{% block body %}
<div class="my-5 pt-4">
    <div class="col-lg-6 mx-auto">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h1 class="ms-2 title-character__font">Personnage</h1>
            <a class="btn btn-info m-1 float-end show--button" href="{{ path('app_characters_index') }}">Revenir Ã  la liste</a>
        </div>

        <table class="table table-hover text-center align-middle">
            <tbody>
                <tr>
                    <th>Nom</th>
                    <td>{{ character.name }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>
                        <img src="{{ asset('assets/images/personnages/') ~ character.image }}" height="100px" alt="poster de {{ character.name }}">
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex flex-row-reverse">
            <a class="btn btn-primary col-2 m-1 show--button"  href="{{ path('app_characters_edit', {'id': character.id}) }}">Modifier</a>
            {{ include('characters/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
